<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b4"
    tools:context=".AlarmActivity">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerBackground="#82B2BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setAlarm"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/roundstyle"
        android:drawableLeft="@drawable/ic_baseline_add_alarm_24"
        android:fontFamily="@font/nunito_light"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Programmer l'alarm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <Button
        android:id="@+id/cancelAlarm"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundstyle"
        android:drawableLeft="@drawable/ic_baseline_cancel_24"
        android:fontFamily="@font/nunito_light"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="annuler l'alarm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAlarm" />

</androidx.constraintlayout.widget.ConstraintLayout>