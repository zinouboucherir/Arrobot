<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b5"
    tools:context=".ConsignesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="583dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9FFFFFF">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/nunito_light"
                android:text="Consignes d'arrosage"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/nunito_light"
                android:text="1- Irriguer régulièrement le sol"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/dateNutr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/nunito_light"
                android:text="2- Arroser un peu avec beaucoup d'eau"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/dateSimple"
                app:layout_constraintTop_toBottomOf="@+id/dateSimple" />

            <TextView
                android:id="@+id/dateNutr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/nunito_light"
                android:text="3- Arrosage le soir ou tôt le matin"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/dateSimple"
                app:layout_constraintTop_toBottomOf="@+id/dateNutr" />

            <TextView
                android:id="@+id/dateNutr4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/nunito_light"
                android:text="4- Arrosage le soir ou tôt le matin"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/dateSimple"
                app:layout_constraintTop_toBottomOf="@+id/dateNutr2" />

            <Button
                android:id="@+id/newDateArr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundstyle"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:fontFamily="@font/nunito_light"
                android:hapticFeedbackEnabled="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="replanifier l'arrosage"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newDateAut" />

            <Button
                android:id="@+id/newDateAut"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundstyle"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:fontFamily="@font/nunito_light"
                android:hapticFeedbackEnabled="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ne pas arroser "
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arroser" />

            <Button
                android:id="@+id/arroser"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/roundstyle"
                android:drawableLeft="@drawable/ic_grass2"
                android:fontFamily="@font/nunito_light"
                android:hapticFeedbackEnabled="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Effectuer l'arrosage"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateNutr4" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>