<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text"
        android:layout_width="316dp"
        android:layout_height="83dp"
        android:layout_marginTop="40dp"
        android:hint="Nom1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nom1"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:padding="12dp"
            android:textColorLink="#2E6A9D" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text1"
        android:layout_width="316dp"
        android:layout_height="83dp"
        android:hint="Nom2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="0.013">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nom2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:padding="12dp"
            android:textColorLink="#2E6A9D" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/arrSimple"
        android:layout_width="182dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:text="Date arrosage simple"
        app:layout_constraintBottom_toBottomOf="@+id/dateSimple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toEndOf="@+id/dateSimple"
        app:layout_constraintTop_toTopOf="@+id/dateSimple"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/arrNutr"
        android:layout_width="179dp"
        android:layout_height="56dp"
        android:text="Date arrosage nutriment"
        app:layout_constraintBottom_toBottomOf="@+id/dateNutr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toEndOf="@+id/dateNutr"
        app:layout_constraintTop_toTopOf="@+id/dateNutr" />

    <TextView
        android:id="@+id/dateSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/dateNutr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/dateSimple"
        app:layout_constraintTop_toBottomOf="@+id/dateSimple" />

    <Button
        android:id="@+id/ajouterPlante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planteimage" />

    <Button
        android:id="@+id/ajouterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ajouter Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrNutr" />

    <ImageView
        android:id="@+id/planteimage"
        android:layout_width="330dp"
        android:layout_height="209dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajouterImage"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>